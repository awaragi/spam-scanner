{
  "name": "spam-scanner",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}' --ignore-path .gitignore",
    "lint:format": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,scss,md}' --ignore-path .gitignore",
    "test": "vitest run"
  },
  "dependencies": {
    "email-addresses": "^5.0.0",
    "emailjs-mime-codec": "^2.0.9",
    "env-cmd": "^10.1.0",
    "imapflow": "^1.0.148",
    "pino": "^8.14.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/emailjs-mime-codec": "^2.0.2",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
