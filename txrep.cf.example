# TxRep configuration template
use_txrep 1
txrep_factory Mail::SpamAssassin::Plugin::TxRep

# TxRep scoring parameters
txrep_learn_penalty 1.0
txrep_learn_bonus 1.0
txrep_whitelist_factor 0.1
txrep_blacklist_factor 2.0

# Enable TxRep for specific tests
header TXREP eval:check_txrep('reputation')
describe TXREP TxRep reputation check
score TXREP 0.0 # Score will be set dynamically by TxRep

# TxRep database settings
txrep_track_messages 1
txrep_dilution_factor 0.99
